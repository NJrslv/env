filetype plugin indent on

set autoread
set ruler
set smartcase
set hlsearch
set showmatch

syntax on


colorscheme gruvbox
set encoding=utf8
set ffs=unix,dos,mac
set nobackup
set nowb
set noswapfile
set expandtab
set smarttab
set shiftwidth=4
set tabstop=2
set lbr
set tw=500
set wrap "Wrap lines
set number
set backspace=indent,eol,start
set mouse+=a

inoremap jk <esc>
nmap <C-h> <C-w>h
nmap <C-j> <C-w>j
nmap <C-k> <C-w>k
nmap <C-l> <C-w>l
nmap vv <C-w>v
nmap hh <C-w>s
